{% assign av = product.available %}

<style>
.pcart{
  height:30vh;
  flex-basis:calc(33% - 1rem);
  mac-height:none;
}
  
</style>

<div class="pcard pcart" style="position:relative;">
<div class="pholder" style="">
<a href="#" class="pimage"> 
<img class="animateimg2" src="{{ product.images[0] | img_url: '450x450', crop: 'center' }}">
</a>
<div  class="pcardtxt">
<a class="pcardtitle" href="{{ product.url }}">{{ product.title }}</a>
<div class="pcardsub">{%render 'grundpreis' product:product%}</div>
<div class="prices" data-price="{{product.price}}">
<span class="pcardprice">{{product.price |money}}</span>
{%if product.compare_at_price > product.price%}
<span class="pcardcompprice">{{product.compare_at_price |money}}</span>
{%endif%}
</div>
</div>
</div>
{% if av == false%}
<div class="soldout">Ausverkauft</div>
  {% endif %}


{% if av == true and product.compare_at_price > product.price%}
 {% assign minus = product.price | times:100 | divided_by: product.compare_at_price %}
<div class="soldout">-{{ 100 |minus: minus }}%</div>
  {% endif %}
<div class="pcardhide">
<div class="pcardatc">
<div class="js-qty__wrapper2 cstmqty" {% if av == false %}style="visibility:hidden;"{% endif %}>
  <div class="qtyoverlay">
    <div class="fakecicle">    
          <button style="display:none;" type="button" class="js-qty__adjust js-qty__adjust--minus" aria-label="Artikelmenge um eins reduzieren">
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" viewBox="0 0 20 20"><path fill="#444" d="M17.543 11.029H2.1A1.032 1.032 0 0 1 1.071 10c0-.566.463-1.029 1.029-1.029h15.443c.566 0 1.029.463 1.029 1.029 0 .566-.463 1.029-1.029 1.029z"></path></svg>
              <span class="icon__fallback-text" aria-hidden="true">−</span>
          </button>

    </div>
  </div>
          <input type="text"  class="js-qty__num" value="1" min="0" pattern="[0-9]*">
          <button type="button" class="js-qty__adjust js-qty__adjust--minus" aria-label="Artikelmenge um eins reduzieren">
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" viewBox="0 0 20 20"><path fill="#444" d="M17.543 11.029H2.1A1.032 1.032 0 0 1 1.071 10c0-.566.463-1.029 1.029-1.029h15.443c.566 0 1.029.463 1.029 1.029 0 .566-.463 1.029-1.029 1.029z"></path></svg>
              <span class="icon__fallback-text" aria-hidden="true">−</span>
          </button>
          <button type="button" class="js-qty__adjust js-qty__adjust--plus" data-fakebutton-trigger aria-label="Artikelmenge um eins erhöhen">
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" viewBox="0 0 20 20"><path fill="#444" d="M17.409 8.929h-6.695V2.258c0-.566-.506-1.029-1.071-1.029s-1.071.463-1.071 1.029v6.671H1.967C1.401 8.929.938 9.435.938 10s.463 1.071 1.029 1.071h6.605V17.7c0 .566.506 1.029 1.071 1.029s1.071-.463 1.071-1.029v-6.629h6.695c.566 0 1.029-.506 1.029-1.071s-.463-1.071-1.029-1.071z"></path></svg>
              <span class="icon__fallback-text" aria-hidden="true">+</span>
          </button>
        </div>
</div>
<div class="btnholderc">
<a class="btn cstmbtn" data-atc="{{product.selected_or_first_available_variant.id}}">
{% if av == true %}Zum Warenkorb {% else %}Ausverkauft{% endif %}
</a>
</div>
</div>
</div>